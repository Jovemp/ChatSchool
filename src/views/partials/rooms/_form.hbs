<div class="form-group">
    <label for="name">Name</label>
    <input type="text" name="name" class="form-control" placeholder="Entre com nome da Sala" value="{{ room.name }}" >
</div>
<div class="form-group">
    <label for="description">Description</label>
    <input type="text" name="description" class="form-control" placeholder="Entre com a descricao da Sala" value="{{ room.description }}">
</div>

<div class="form-grou">
    <label for="enable">Situação</label>
    <input type="checkbox" name="enable" value="{{ room.enable }}" {{checkedIf room.enable}}>
    <label for="enable">
        Ativo/Desativo?
    </label>
</div>
<div class="form-group">
    <button type="submit" class="btn btn-primary">Save</button>
</div>