<div class="form-group">
    <label for="name">Name</label>
    <input type="text" name="name" placeholder="Entre com seu nome" class="form-control" value="{{ user.name }}">
</div>
<div class="form-group">
    <label for="email">E-mail</label>
    <input type="email" name="email" class="form-control" placeholder="Entre com seu email" value="{{ user.email }}">
</div>
<div class="form-group">
    <label for="password">Password</label>
    <input type="password" name="password" class="form-control" placeholder="Entre com sua Senha" value="{{ user.password }}">
</div>
<div class="form-group">
    <button type="submit" class="btn btn-primary">Save</button>
</div>